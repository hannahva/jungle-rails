<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if current_user %>
      <div class="col-sm-6 col-sm-offset-1">
        <%= form_for [@product, Review.new] do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, [1, 2, 3, 4, 5] %>
          </div>

          <%= form.submit 'Add Review', class: 'btn btn-primary' %>
          <% end %>
   <% else %>
      <h1>Please <%= link_to 'Login', '/login' %> to Leave a Review</h1>
      </div>
   <% end %>


    <div class="row">
    <dl class="dl-horizontal">
    <% @product.reviews.order(created_at: :desc).each do |review| %>
      <div class="review col-sm-12">
        <dt><%= review.user.email %> thinks: </dt>
        <dd><%= review.description %></dd>
        <dt>Rating</dt>
        <dd><%= review.rating %></dd>
        <% if current_user && review.user_id == current_user.id %>
        <%= form_for [@product, review], { action: :delete, method: :delete } do |form| %>
          <%= form.submit 'Delete Review', class: 'btn btn-danger' %>
        <% end %>
       <% end %>
      </div>

    </dl>
    </div>
  <% end %>

  </article>

</section>
